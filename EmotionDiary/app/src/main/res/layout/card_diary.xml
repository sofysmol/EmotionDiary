<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/cv"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_diary_height"


        android:paddingRight="@dimen/card_diary_padding"

        >
        <View
            android:id="@+id/rect"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/colorBad"
            android:layout_marginRight="10dp"
             />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Angry"
            android:id="@+id/status_ton"

            android:gravity="center_vertical|right"
            android:textSize="20sp"
            android:textColor="#e7e7e7"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/rect" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cdscsdcsdcsdcsdcdsc"
            android:id="@+id/title_page"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_below="@+id/date_page"
            android:layout_toEndOf="@+id/rect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пока"
            android:textSize="15sp"
            android:id="@+id/date_page"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ssdsdfsdfsdfds"
            android:textSize="14dp"
            android:id="@+id/content_page"
            android:layout_below="@+id/title_page"
            android:layout_alignStart="@+id/title_page"
            android:layout_marginTop="15dp"
            android:fadingEdge="horizontal"
            android:scrollHorizontally="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
    <!--android:textAppearance="?android:attr/textAppearanceMedium"-->