<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_diary_height"


        android:paddingRight="@dimen/card_diary_padding"

        >
        <View
            android:id="@+id/rect"
            android:layout_width="@dimen/left_rect_width"
            android:layout_height="match_parent"
            android:background="@color/colorBad"
            android:layout_marginRight="10dp"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:text="Привет"
            android:id="@+id/title_page"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/rect"
            android:layout_toEndOf="@+id/rect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пока"
            android:layout_margin="0dp"
            android:textSize="20sp"
            android:id="@+id/date_page"
            android:layout_below="@+id/title_page"
            android:layout_alignStart="@+id/title_page" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Покаhghgggghghhghghghhghghghghg"
            android:textSize="20sp"
            android:id="@+id/content_page"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/date_page"
            android:layout_toEndOf="@+id/rect" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
    <!--android:textAppearance="?android:attr/textAppearanceMedium"-->